<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="@dimen/listRowHeight">

    <ImageView
        android:id="@+id/row_Icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/googleg_standard_color_18" />

    <RelativeLayout
        android:id="@+id/listRowContent"
        android:paddingStart="16dp"
        android:layout_toEndOf="@+id/row_Icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listRowHeight">

        <TextView
            android:id="@+id/row_Name"

            android:paddingLeft="10dp"
            android:paddingTop="5dp"

            android:textSize="20dp"
            android:text="Coco's Bubble Tea"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/row_Distance"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_Name"

            android:padding="5dp"

            android:text="200 meters away" />
    </RelativeLayout>

</RelativeLayout>