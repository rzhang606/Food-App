<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.BusinessDisplayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            style="@style/HeaderTextStyle"
            android:id="@+id/b_frag_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="Name" />

        <GridLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10sp"
            android:columnCount="3">

            <TextView
                style="@style/TextStyle"
                android:id="@+id/b_frag_Rating"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="Rating" />

            <TextView
                style="@style/TextStyle"
                android:id="@+id/b_frag_price"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="Price" />


        </GridLayout>

        <TextView
            style="@style/TextStyle"
            android:id="@+id/b_frag_Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="Category" />


        <ImageView
            android:id="@+id/b_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/food_image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5sp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:text="Open in maps" />

        <TextView
            android:id="@+id/b_frag_Distance"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Distance" />

        <Button
            android:id="@+id/b_frag_another"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Another" />

    </LinearLayout>

</RelativeLayout>